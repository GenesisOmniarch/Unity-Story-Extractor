            </Grid.ColumnDefinitions>
            
            <!-- å·¦ãƒ‘ãƒãƒ«: ãƒ•ã‚¡ã‚¤ãƒ«ãƒ„ãƒªãƒ¼ -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
