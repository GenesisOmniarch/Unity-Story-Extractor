                            </Grid.RowDefinitions>
                            
                            <!-- ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼ -->
                            <StackPanel Orientation="Horizontal" Margin="8" Grid.Row="0">
                                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
