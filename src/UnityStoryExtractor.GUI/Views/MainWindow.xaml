                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <!-- ãƒ•ã‚¡ã‚¤ãƒ«ãƒ„ãƒªãƒ¼ -->
                    <TreeView Grid.Row="1" 
