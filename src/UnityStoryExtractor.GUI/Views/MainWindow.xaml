<Window x:Class="UnityStoryExtractor.GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:UnityStoryExtractor.GUI.ViewModels"
        xmlns:conv="clr-namespace:UnityStoryExtractor.GUI.Converters"
        mc:Ignorable="d"
        Title="Unity Story Extractor" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        Style="{StaticResource MaterialDesignWindow}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Yu Gothic UI, MS Gothic, Meiryo, Segoe UI">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:FileNodeTypeToIconConverter x:Key="NodeTypeToIcon"/>
        <conv:FileSizeConverter x:Key="FileSizeConverter"/>
    </Window.Resources>
    
    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- ツールバー -->
            <materialDesign:ColorZone Mode="PrimaryMid" Padding="16" Grid.Row="0">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <materialDesign:PackIcon Kind="FolderOpen" Width="24" Height="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Unity Story Extractor" 
                                   FontSize="20" 
                                   FontWeight="Medium" 
                                   VerticalAlignment="Center" 
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignFlatLightBgButton}"
                                Command="{Binding OpenFolderCommand}"
                                ToolTip="フォルダを開く"
                                Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FolderOpen" VerticalAlignment="Center"/>
                                <TextBlock Text="フォルダを開く" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Style="{StaticResource MaterialDesignFlatLightBgButton}"
                                Command="{Binding SettingsCommand}"
                                ToolTip="設定">
                            <materialDesign:PackIcon Kind="Cog"/>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>
            
            <!-- メインコンテンツ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" MinWidth="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左パネル: ファイルツリー -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 検索ボックス -->
                    <materialDesign:Card Margin="8" Padding="8" Grid.Row="0">
                        <TextBox materialDesign:HintAssist.Hint="検索..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </materialDesign:Card>
                    
                    <!-- ファイルツリー -->
                    <TreeView Grid.Row="1" 
                              ItemsSource="{Binding FileTreeNodes}"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              Margin="8,0,8,8">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem" BasedOn="{StaticResource MaterialDesignTreeViewItem}">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <materialDesign:PackIcon Kind="{Binding NodeType, Converter={StaticResource NodeTypeToIcon}}" 
                                                             Width="20" Height="20"
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" 
                                               Margin="8,0,0,0" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FileSize, Converter={StaticResource FileSizeConverter}}" 
                                               Foreground="Gray" 
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsDirectory, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                    
                    <!-- 空状態 -->
                    <StackPanel Grid.Row="1" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="{Binding HasNoFiles, Converter={StaticResource BoolToVisibility}}">
                        <materialDesign:PackIcon Kind="FolderOpen" 
                                                 Width="64" Height="64" 
                                                 HorizontalAlignment="Center"
                                                 Foreground="Gray"/>
                        <TextBlock Text="フォルダをドラッグ＆ドロップ&#x0a;または「フォルダを開く」を&#x0a;クリックしてください" 
                                   TextAlignment="Center"
                                   Foreground="Gray"
                                   Margin="0,16,0,0"/>
                    </StackPanel>
                </Grid>
                
                <GridSplitter Grid.Column="1" Width="4" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Stretch"
                              Background="Transparent"/>
                
                <!-- 右パネル: プレビューと操作 -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 抽出ボタンと進捗 -->
                    <materialDesign:Card Grid.Row="0" Margin="8" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Grid.Row="0">
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        Command="{Binding ExtractCommand}"
                                        IsEnabled="{Binding CanExtract}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Export" VerticalAlignment="Center"/>
                                        <TextBlock Text="抽出開始" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding CancelCommand}"
                                        Visibility="{Binding IsExtracting, Converter={StaticResource BoolToVisibility}}"
                                        Margin="8,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Stop" VerticalAlignment="Center"/>
                                        <TextBlock Text="キャンセル" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding ExportCommand}"
                                        IsEnabled="{Binding HasResults}"
                                        Margin="8,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center"/>
                                        <TextBlock Text="保存" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            
                            <!-- 進捗バー -->
                            <Grid Grid.Row="1" Margin="0,16,0,0"
                                  Visibility="{Binding IsExtracting, Converter={StaticResource BoolToVisibility}}">
                                <ProgressBar Value="{Binding Progress}" 
                                             Height="20"
                                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                                <TextBlock Text="{Binding ProgressText}" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="12"/>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- タブコントロール -->
                    <TabControl Grid.Row="1" Margin="8,0,8,8"
                                Style="{StaticResource MaterialDesignFilledTabControl}">
                        
                        <!-- プレビュータブ -->
                        <TabItem Header="プレビュー">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- フィルター -->
                                <StackPanel Orientation="Horizontal" Margin="8" Grid.Row="0">
                                    <TextBox materialDesign:HintAssist.Hint="フィルター..."
                                             Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                                             Width="200"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                    
                                    <ComboBox ItemsSource="{Binding FilterSources}"
                                              SelectedItem="{Binding SelectedFilterSource}"
                                              materialDesign:HintAssist.Hint="ソース"
                                              Width="150"
                                              Margin="8,0,0,0"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                                </StackPanel>
                                
                                <!-- 結果リスト -->
                                <DataGrid Grid.Row="1"
                                          ItemsSource="{Binding FilteredResults}"
                                          SelectedItem="{Binding SelectedResult}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          SelectionMode="Single"
                                          Style="{StaticResource MaterialDesignDataGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="アセット名" Binding="{Binding AssetName}" Width="150"/>
                                        <DataGridTextColumn Header="タイプ" Binding="{Binding AssetType}" Width="100"/>
                                        <DataGridTextColumn Header="ソース" Binding="{Binding Source}" Width="100"/>
                                        <DataGridTextColumn Header="内容" Binding="{Binding Content}" Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        
                        <!-- 詳細タブ -->
                        <TabItem Header="詳細">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="{Binding SelectedResult.AssetName, StringFormat='アセット: {0}'}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding SelectedResult.SourceFile, StringFormat='ファイル: {0}'}" Foreground="Gray"/>
                                </StackPanel>
                                
                                <TextBox Grid.Row="1" 
                                         Text="{Binding SelectedResult.Content, Mode=OneWay}"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         AcceptsReturn="True"
                                         Margin="0,8,0,0"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            </Grid>
                        </TabItem>
                        
                        <!-- ログタブ -->
                        <TabItem Header="ログ">
                            <TextBox Text="{Binding LogText, Mode=OneWay}"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     AcceptsReturn="True"
                                     Margin="8"
                                     FontFamily="Consolas, MS Gothic"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        </TabItem>
                    </TabControl>
                    
                    <!-- 統計情報 -->
                    <materialDesign:Card Grid.Row="2" Margin="8,0,8,8" Padding="8"
                                         Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Statistics.TextAssetCount, StringFormat='TextAsset: {0}'}" Margin="0,0,16,0"/>
                            <TextBlock Text="{Binding Statistics.MonoBehaviourCount, StringFormat='MonoBehaviour: {0}'}" Margin="0,0,16,0"/>
                            <TextBlock Text="{Binding Statistics.AssemblyStringCount, StringFormat='Assembly: {0}'}" Margin="0,0,16,0"/>
                            <TextBlock Text="{Binding Statistics.TotalBytes, StringFormat='合計: {0} bytes'}"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </Grid>
            
            <!-- ステータスバー -->
            <StatusBar Grid.Row="2">
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusText}"/>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <TextBlock Text="{Binding UnityVersion, StringFormat='Unity: {0}'}"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </materialDesign:DialogHost>
</Window>
