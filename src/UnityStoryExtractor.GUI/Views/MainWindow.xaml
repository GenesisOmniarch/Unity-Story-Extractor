                            <TextBlock Text="{Binding ProgressText}" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="11"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- ã‚¿ãƒ–ã‚³ãƒ³ãƒˆãƒ­ãƒ¼ãƒ« -->
