<Application x:Class="UnityStoryExtractor.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <!-- カスタムスタイル -->
            <Style x:Key="JapaneseFont" TargetType="Control">
                <Setter Property="FontFamily" Value="Yu Gothic UI, MS Gothic, Meiryo, Segoe UI"/>
            </Style>
            
            <!-- プライマリカラー -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#673AB7"/>
            <SolidColorBrush x:Key="PrimaryLightBrush" Color="#9575CD"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#7C4DFF"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
